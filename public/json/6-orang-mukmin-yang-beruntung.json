    {
      "type": "verse",
      "arabic": "يَا أَيُّهَا الَّذِينَ آمَنُوا أَنفِقُوا مِن طَيِّبَاتِ مَا كَسَبْتُمْ",
      "surah": "Al-Baqarah",
      "chapter": 2,
      "verse": "267"
    },
