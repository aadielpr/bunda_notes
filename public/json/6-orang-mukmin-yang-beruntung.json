      "reference": {
        "surah": "Ash-Shams",
        "chapter": 91,
        "verse": "8-10"
      }
    },
    {
      "type": "verse",
      "arabic": "فَأَلْهَمَهَا فُجُورَهَا وَتَقْوَاهَا",
      "surah": "Ash-Shams",
      "chapter": 91,
      "verse": "8"
    },
    {
      "type": "verse",
      "arabic": "قَدْ أَفْلَحَ مَن زَكَّاهَا",
      "surah": "Ash-Shams",
      "chapter": 91,
      "verse": "9"
    },
    {
      "type": "verse",
      "arabic": "وَقَدْ خَابَ مَن دَسَّاهَا",
      "surah": "Ash-Shams",
      "chapter": 91,
      "verse": "10"
    },
